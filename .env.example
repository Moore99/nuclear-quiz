# Copy this to .env and adjust values for your environment

# Port mapping (host:container = PORT:5000)
PORT=5001

# Flask environment (development or production)
FLASK_ENV=production

# Admin password for /admin routes
ADMIN_PASSWORD=changeme

# Flask session + JWT signing key. Must be a strong random value in production.
# Generate one with: python3 -c "import secrets; print(secrets.token_hex(32))"
# Minimum 32 bytes required by PyJWT; 64 hex chars (32 bytes) recommended.
SECRET_KEY=change-this-secret-key
